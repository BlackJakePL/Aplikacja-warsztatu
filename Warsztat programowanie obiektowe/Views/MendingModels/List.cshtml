@model Warsztat_programowanie_obiektowe.Models.MendingModel

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List</h2>

<div>
    <h4>MendingModel</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.MendingDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MendingDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MendingTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MendingTime)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.VIN)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VIN)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ID_worker)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ID_worker)
        </dd>
    </dl>
    <table class="table">
        <tr>
            <th>
            <th>
                @Html.ActionLink("Nazwa", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Cena", "Index", new { sortOrder = ViewBag.PriceSortParam, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.List)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID_part }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID_part }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID_part })
                </td>
            </tr>
        }
    </table>

    @using (Html.BeginForm("ListAdd", "MendingModels"))
    {

        <div class="form-group">
            @Html.LabelFor(model => model.ID_mending, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ID_mending);
                @Html.ValidationMessageFor(model => model.ID_mending, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <lable class = "control-label col-md-2"> ID_part</lable>
            <div class="col-md-10">
                @Html.DropDownList("ID_part", String.Empty)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    }
    @Html.ActionLink("Dodaj czesc do listy", "ListAdd", new { id = Model.ID_mending });
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID_mending }) |
    @Html.ActionLink("Back to List", "Index")
</p>
